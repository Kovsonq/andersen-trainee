<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>part2.Servlets.GoodListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddProductToDbServlet</servlet-name>
        <servlet-class>part2.Servlets.AddProductToDbServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductToDbServlet</servlet-name>
        <url-pattern>/add-product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteProductFromDbServlet</servlet-name>
        <servlet-class>part2.Servlets.DeleteProductFromDbServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductFromDbServlet</servlet-name>
        <url-pattern>/delete-product</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddProductToBucketDbServlet</servlet-name>
        <servlet-class>part2.Servlets.AddProductToBucketDbServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductToBucketDbServlet</servlet-name>
        <url-pattern>/add-product-to-bucket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteProductFromBucketDbServlet</servlet-name>
        <servlet-class>part2.Servlets.DeleteProductFromBucketDbServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductFromBucketDbServlet</servlet-name>
        <url-pattern>/delete-product-from-bucket</url-pattern>
    </servlet-mapping>

</web-app>